@model Students.MVC.ViewModels.LessonViewModel
@{
    ViewData["Title"] = "Новая занятия";
    Layout = "_LayoutAdditional";
}
<body>
    <div class="registration-form">
        <form asp-action="Create">
            <div class="validation" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="CourseId" />
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" asp-for="NumberLesson" id="numberLesson" placeholder="Номер занятия">
                <span asp-validation-for="NumberLesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control item" asp-for="Name" id="name" placeholder="название занятия"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control item" asp-for="Homework" id="homework" placeholder="Домашние занятия"></textarea>
                <span asp-validation-for="Homework" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" asp-for="Description" id="description" placeholder="Описание занятия">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" asp-controller="Lessons" asp-action="Create" class="btn btn-block create-account" />
            </div>
            <div class="form-group">
                <input type="submit" value="Назад" asp-controller="Course" asp-action="Index" class="btn btn-block create-account" />
            </div>
        </form>
    </div>
</body>